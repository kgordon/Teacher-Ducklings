<h1><%= @video.title %></h1>

<p class="created">Uploaded <%= time_ago_in_words @video.created_at %> ago</p>

<p>
	<strong>Description:</strong><br />
	<%=h @video.description %>
</p>

<%= render :partial => "video_player", :object => @video %>

<p><%= link_to "Edit Video", edit_user_video_path %></p>

<h2>Video Reviews</h2>
<div id="reviews">
	<% if @video.reviews.size > 0 -%>
		<%= render :partial => '/reviews/review', :collection => @video.reviews %>
	<% else -%>
		<p>Nobody has reviewed this video yet...</p>
	<% end -%>
</div>

<% if admin? -%>
	<h2>Add a Review</h2>
	<% form_for Review.new, :url => reviews_path, :html => { :multipart => true } do |f| %>
		<%= f.hidden_field :video_id, :value => @video.id %>
		<p>
			<%= f.label :description, "Description:" %>
			<%= f.text_area :description, :rows => 5 %>
		</p>
		<p>
			<%= f.label :pdf, "Attach a PDF:" %>
			<%= f.file_field :pdf %>
		</p>
		<p>
			<%= f.label "" %>
			<%= f.submit "Add a Review" %>
		</p>
	<% end %>
<% end -%>